<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#each comments as |comment|}}
   <div class="card-body">
                <div class="pl-4 pb-2 pr-4">{{ comment.comment }}</div>
            </div>
  {{/each}}
  <p>
    <button class="btn btn-primary" href="/api/comments/made/{{ post.id }}">Fund this Project!</button>
  </p>
</div>
